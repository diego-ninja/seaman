{
  "name": "seaman/seaman",
  "description": "Docker development environment manager for Symfony 7+",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Diego Rin Mart√≠n",
      "email": "yosoy@diego.ninja"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-pcntl": "*",
    "ext-posix": "*",
    "diego-ninja/docker": "^2.1",
    "diego-ninja/granite": "^1.5",
    "innmind/signals": "^4.1",
    "jolicode/jolinotif": "^3",
    "laravel/prompts": "^0.3.8",
    "nunomaduro/termwind": "^2.3",
    "phlak/config": "^0.3.0",
    "ramsey/collection": "^2.1",
    "symfony/console": "^7",
    "symfony/event-dispatcher": "^8.0",
    "symfony/process": "^7",
    "symfony/yaml": "^7",
    "twig/twig": "^3",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.64",
    "mockery/mockery": "^1.6",
    "pestphp/pest": "^4.0",
    "pestphp/pest-plugin-arch": "^4.0",
    "phpstan/phpstan": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Seaman\\": "src/"
    },
    "files": [
      "helpers/functions.php"
    ]

  },
  "autoload-dev": {
    "psr-4": {
      "Seaman\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "bin": [
    "bin/seaman"
  ],
  "scripts": {
    "test": "pest",
    "test:coverage": "pest --coverage --min=95",
    "phpstan": "phpstan analyse src tests --level=10",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix",
    "quality": [
      "@phpstan",
      "@cs:check",
      "@test:coverage"
    ],
    "build": "bin/seaman build"
  }
}
