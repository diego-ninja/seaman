  {{ name }}:
    image: minio/minio:{{ service.version }}
    container_name: seaman-{{ name }}
    command: server /data --console-address ":9001"
    environment:
      - MINIO_ROOT_USER=${MINIO_ROOT_USER:-seaman}
      - MINIO_ROOT_PASSWORD=${MINIO_ROOT_PASSWORD:-seaman123}
    ports:
      - "${MINIO_PORT}:9000"
      - "${MINIO_CONSOLE_PORT}:9001"
{% if proxy_enabled and labels is defined and labels|length > 0 %}
    labels:
{% for label in labels %}
      - "{{ label }}"
{% endfor %}
{% endif %}
    networks:
      - seaman
{% if volumes.shouldPersist(name) %}
    volumes:
      - {{ name }}:/data
{% endif %}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/minio/health/live"]
      interval: 30s
      timeout: 20s
      retries: 3
