  {{ name }}:
    image: mongo:{{ service.version }}
    container_name: seaman-{{ project_name }}-{{ name }}
    environment:
      - MONGO_INITDB_ROOT_USERNAME=${MONGO_USER:-seaman}
      - MONGO_INITDB_ROOT_PASSWORD=${MONGO_PASSWORD:-seaman}
      - MONGO_INITDB_DATABASE=${MONGO_DB:-seaman}
    ports:
      - "${MONGO_PORT}:27017"
{% if labels is defined and labels|length > 0 %}
    labels:
{% for label in labels %}
      - "{{ label }}"
{% endfor %}
{% endif %}
    networks:
      - seaman
{% if volumes.shouldPersist(name) %}
    volumes:
      - {{ name }}:/data/db
{% endif %}
    healthcheck:
      test: ["CMD", "mongosh", "--eval", "db.adminCommand('ping')"]
      interval: 10s
      timeout: 5s
      retries: 5
