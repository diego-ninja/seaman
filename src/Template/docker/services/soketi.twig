  {{ name }}:
    image: quay.io/soketi/soketi:{{ service.version }}
    container_name: seaman-{{ name }}
    environment:
      - SOKETI_DEBUG=${SOKETI_DEBUG:-1}
      - SOKETI_DEFAULT_APP_ID=${PUSHER_APP_ID:-app-id}
      - SOKETI_DEFAULT_APP_KEY=${PUSHER_APP_KEY:-app-key}
      - SOKETI_DEFAULT_APP_SECRET=${PUSHER_APP_SECRET:-app-secret}
    ports:
      - "${SOKETI_PORT}:6001"
      - "${SOKETI_METRICS_PORT:-9601}:9601"
{% if labels is defined and labels|length > 0 %}
    labels:
{% for label in labels %}
      - "{{ label }}"
{% endfor %}
{% endif %}
    networks:
      - seaman
    healthcheck:
      test: ["CMD", "wget", "--spider", "-q", "http://localhost:6001"]
      interval: 10s
      timeout: 5s
      retries: 5
