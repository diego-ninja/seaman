{# ABOUTME: Docker Compose service template for Memcached. #}
{# ABOUTME: Generates Memcached container configuration with health checks. #}

  memcached:
    image: memcached:{{ config.version | default('1.6-alpine') }}
    container_name: {{ project.name }}-memcached
    ports:
      - "${MEMCACHED_PORT:-{{ config.port | default(11211) }}}:11211"
    healthcheck:
      test: ["CMD-SHELL", "echo version | nc -w 1 localhost 11211 | grep -q VERSION"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 5s
    labels:
      - "traefik.enable=false"
    networks:
      - {{ project.name }}-network
    restart: unless-stopped
