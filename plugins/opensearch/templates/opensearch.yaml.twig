{# ABOUTME: Docker Compose service template for OpenSearch. #}
{# ABOUTME: Generates OpenSearch container configuration with health checks and volumes. #}

  opensearch:
    image: opensearchproject/opensearch:{{ config.version | default('2') }}
    container_name: {{ project.name }}-opensearch
    ports:
      - "${OPENSEARCH_PORT:-{{ config.port | default(9200) }}}:9200"
      - "${OPENSEARCH_PERFORMANCE_PORT:-{{ config.performance_port | default(9600) }}}:9600"
    environment:
      - discovery.type=single-node
      - DISABLE_SECURITY_PLUGIN=true
      - "OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m"
    volumes:
      - opensearch_data:/usr/share/opensearch/data
    healthcheck:
      test: ["CMD-SHELL", "curl -s http://localhost:9200/_cluster/health | grep -q -E 'green|yellow'"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 60s
    labels:
      - "traefik.enable=false"
    networks:
      - {{ project.name }}-network
    restart: unless-stopped
